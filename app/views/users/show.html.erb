 <% if user_signed_in? %>
    <div class="same">
        <h1>Users Info</h1>
            <%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
            <%= current_user.name %>
            <%= current_user.introduction %>
            <%= link_to "編集", edit_user_path(current_user) %>
        <h1>New Book</h1>
            <%= form_with model: @book, local:true do |f| %>
                <label>title</label>
                <%= f.text_field :title %>
                <label>opinion</label>
                <%= f.text_area :body %>
                <%= f.submit "Create Book" %>
            <% end %>
    </div>
    <%= @books.each do |f| %>
        <%= f.title %>
        <%= f.body %>
    <% end %>
<% end %>



