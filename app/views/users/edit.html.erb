 <% if current_user.id == @user.id %>
    <p><%= flash[:notice] %></p>
     <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this book from being saved:</h3>
        <div id="error_explanation" class="alert alert-danger">
            <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
             </ul>
        </div>
    <% end %>
    <div class="edit">
        <%= form_with model:@user, local:true,class: "edit-form" do |f| %>
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true,  autocomplete: "name" %>
          <label for="inputImage">ProfileImage</label>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", fallback: "no_image.jpg" %>
          <div class="field">
            <%= f.label :Introduction %><br />
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
          </div>
          <%= f.submit "Update User" %>
        <% end %>
    </div>
<% end %>




