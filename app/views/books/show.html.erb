    <p><%= flash[:notice] %></p>
    <div class="container">  
      <div class="row">   
        <div class="col-md-3"> 
        <h1>Users Info</h1>
            <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
            <%= @user.name %>
            <%= @user.introduction %>
                <%= link_to edit_user_path(@user), method: :get do %>
                <i class="fas fa-user-cog "></i>
                <% end %>
        <h1>New book</h1>
            <%= form_with model: @book, local:true do |f| %>
                <label>title</label>
                <%= f.text_field :title %>
                <label>opinion</label>
                <%= f.text_area :body %>
                <%= f.submit "Create Book" %>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1"> 
           
            <h1>Book detail</h1>
            <table class="table">
                <tr>
                    <td><div class="user-icons">
                        <%= attachment_image_tag @book_detail.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
                        <%= link_to @book_detail.user.name, user_path(@book_detail.user) %>
                    </div></td>
                    <td><%= link_to @book_detail.title, book_path(@book_detail) %></td>
                    <td><%= @book_detail.body %></td>
                    <% if current_user == @book_detail.user %>
                    <td><%= link_to "Edit", edit_book_path(@book_detail.id) %></td>
                    <td><%= link_to "Destroy", book_path(@book_detail.id),  method: :delete %></td>
                    <% end %>
                </tr>
            </table>
        </div>
        </div>
        </div>
   
    
    
    
    
    
    













